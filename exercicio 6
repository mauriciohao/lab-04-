#include <stdio.h>
// exercicio 6 - a)
double soma(int n) {
    double resultado = 0.0;
    int k;
    for (k = 1; k <= n; k++) {
        resultado += (double) k / (k * k) * pow(-1, k + 1);
    }
    return resultado;
}
// b) 
int main() {
    int n;
    printf("Digite um valor para n: ");
    scanf("%d", &n);
    double resultado = soma(n);
    printf("O resultado da soma Ã©: %f\n", resultado);
    return 0;
}
